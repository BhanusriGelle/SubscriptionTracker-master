@model IEnumerable<SubscriptionTracker.Models.Service>

@{ ViewBag.Title = "Index"; }

<h2>Index</h2>
<style>
    body {
        padding: 25px;
        background-color: white;
        color: black;
        font-size: 20px;
    }

    .dark-mode {
        background-color: black;
        color: white;
    }
</style>
<p>Click for dark/light Mode</p>
<button onclick="myFunction()">Toggle dark mode</button>
<script>function myFunction() {
        var element = document.body;
        element.classList.toggle("dark-mode");
    }</script>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingTerm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pricing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ServiceName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LogoUrl)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PlanStatus)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BillingTerm)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pricing)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ServiceType)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId })
    </td>
</tr>}

</table>
